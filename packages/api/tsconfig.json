{
  "compilerOptions": {
    "composite": true,
    "target": "ES5",
    "lib": ["esnext"],
    "outDir": "build",
    "rootDir": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": ["node"]
  },
  "exclude": ["**/*.spec.ts", "node_modules"],
  "include": ["src/**/*"]
}
